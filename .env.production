# Production Environment Variables

# Primary AI Provider (Optimized for free tier)
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
PORT=8000
WORKERS=4
LOG_LEVEL=info

# Security & Performance (Optimized for free tier)
MAX_FILE_SIZE=5242880  # 5MB instead of 10MB to reduce processing time
MAX_BULK_FILES=25  # Increased since we're more efficient now
REQUEST_TIMEOUT=60
BATCH_SIZE=10  # Increased to 10 images per API call for maximum efficiency

# CORS Configuration (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Optional - for CSV email functionality)
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASSWORD=your_app_password

# Monitoring (Optional)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
